{
  "name": "syncode-project",
  "version": "1.0.0",
  "description": "Collaborative Code Editor with Real-time Chat",
  "main": "server/src/index.js",
  "scripts": {
    "start": "node server/src/index.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd server && npm start",
    "client": "cd client && npm start",
    "build": "npm run install-all && cd client && npm run build:render",
    "install-all": "npm install && cd server && npm install && cd ../client && npm install",
    "heroku-postbuild": "npm run build",
    "render-postbuild": "npm run build"
  },
  "keywords": ["collaborative", "code-editor", "real-time", "chat"],
  "author": "Your Name",
  "license": "MIT",
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "dependencies": {
    "concurrently": "^7.6.0"
  },
  "devDependencies": {
    "concurrently": "^7.6.0"
  }
}
